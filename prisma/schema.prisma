generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id  
  name  String  
  email  String    
  created_at  DateTime @default(now())
}

model Asteroids {
  id Int      @default(autoincrement()) @id
  diameter Int
  discovered DateTime
  comment String
}

model Favorites {
  id    Int     @default(autoincrement()) @id  
  user_id Int  
  asteroid_id Int  

  @@unique([user_id, asteroid_id], name: "unique_user_asteroid")
}
